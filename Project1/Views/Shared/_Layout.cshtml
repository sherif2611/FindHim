<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FindHim</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Project1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="https://localhost:7179/">Find Him</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText" style="align-content:flex-end;">
                <ul class="navbar-nav mr-auto">
                    @if(User?.Identity?.IsAuthenticated == false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="https://localhost:7179/Account/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://localhost:7179/Account/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active">
                            <a class="nav-link" href="https://localhost:7179/MissingPeople/AddPerson">Add Missing Person</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="https://localhost:7179/MissingPeople/People">Posted people</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="https://localhost:7179/Account/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
